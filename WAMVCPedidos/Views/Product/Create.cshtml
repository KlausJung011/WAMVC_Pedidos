@model WAMVCPedidos.Models.ProductModel

@{
    ViewData["Title"] = "Crear Producto";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Crear Nuevo Producto</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group mb-3">
                                    <label asp-for="Nombre" class="form-label fw-bold"></label>
                                    <input asp-for="Nombre" class="form-control form-control-lg" autocomplete="name" placeholder="Ingrese el nombre del producto..." />
                                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Categoria" class="form-label fw-bold"></label>
                                    <input asp-for="Categoria" class="form-control form-control-lg" autocomplete="off" />
                                    <span asp-validation-for="Categoria" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-7">
                                <div class="form-group mb-3">
                                    <label asp-for="Descripcion" class="form-label fw-bold"></label>
                                    <input asp-for="Descripcion" class="form-control form-control-lg" autocomplete="off" />
                                    <span asp-validation-for="Descripcion" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group mb-3">
                                    <label asp-for="Precio" class="form-label fw-bold"></label>
                                    <input asp-for="Precio" class="form-control form-control-lg" autocomplete="off" />
                                    <span asp-validation-for="Precio" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group mb-3">
                                    <label asp-for="Stock" class="form-label fw-bold"></label>
                                    <input asp-for="Stock" class="form-control form-control-lg" autocomplete="off" />
                                    <span asp-validation-for="Stock" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary btn-lg me-md-2">
                                <i class="fas fa-arrow-left me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-1"></i>Crear Producto
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}