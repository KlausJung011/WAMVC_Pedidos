@model IEnumerable<WAMVCPedidos.Models.OrderItemModel>

@{
    ViewData["Title"] = "Items de Órdenes";
}

<div class="container-fluid">
    <div class="alert alert-warning d-flex align-items-center" role="alert">
        <i class="fas fa-info-circle me-2"></i>
        Los items se gestionan desde el <strong>Detalle</strong> de cada orden (agregar, editar cantidades o eliminar).
    </div>

    <div class="card shadow-lg border-0">
        <div class="card-header bg-warning">
            <h2 class="mb-0">
                <i class="fas fa-list me-2"></i>Items
            </h2>
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Orden</th>
                                <th>Producto</th>
                                <th class="text-center">Cantidad</th>
                                <th class="text-end">Subtotal</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>#@item.IdOrder - @item.Order?.Estado</td>
                                    <td>@item.Product?.Nombre</td>
                                    <td class="text-center">@item.Cantidad</td>
                                    <td class="text-end">@item.Subtotal.ToString("C")</td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detalles">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-controller="Order" asp-action="Details" asp-route-id="@item.IdOrder" class="btn btn-sm btn-outline-primary" title="Ir a la orden">
                                                <i class="fas fa-arrow-right"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    No hay items registrados.
                </div>
            }
        </div>
    </div>
</div>