@model WAMVCPedidos.Models.OrderItemModel

@{
    ViewData["Title"] = "Agregar Item";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning">
                    <h2 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Agregar Item</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="IdOrder" class="form-label fw-bold"></label>
                                    <select asp-for="IdOrder" class="form-select form-select-lg" asp-items="ViewBag.IdOrder"></select>
                                    <span asp-validation-for="IdOrder" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="IdProduct" class="form-label fw-bold"></label>
                                    <select asp-for="IdProduct" class="form-select form-select-lg" asp-items="ViewBag.IdProduct"></select>
                                    <span asp-validation-for="IdProduct" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Cantidad" class="form-label fw-bold"></label>
                                    <input asp-for="Cantidad" class="form-control form-control-lg" min="1" />
                                    <span asp-validation-for="Cantidad" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            El <strong>subtotal</strong> y el <strong>total del pedido</strong> se calculan automáticamente. El stock se valida al guardar.
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary btn-lg me-md-2">
                                <i class="fas fa-arrow-left me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="fas fa-save me-1"></i>Agregar Item
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}