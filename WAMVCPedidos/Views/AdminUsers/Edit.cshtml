@model WAMVCPedidos.Controllers.AdminUsersController.EditUserVm
@{
    ViewData["Title"] = "Editar usuario";
}
<h2>Editar usuario</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-2">
        <label class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
        <small class="text-muted">El login usará este email como usuario.</small>
    </div>
    <div class="mb-3">
        <label class="form-label">Roles</label>
        <select asp-for="Roles" class="form-select" multiple size="3">
            @foreach (var r in Model.AllRoles)
            {
                <option value="@r" selected="@(Model.Roles.Contains(r))">@r</option>
            }
        </select>
    </div>
    <button class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
<partial name="_ValidationScriptsPartial" />