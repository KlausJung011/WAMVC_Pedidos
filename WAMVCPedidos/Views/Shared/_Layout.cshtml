@using Microsoft.AspNetCore.Identity
@inject SignInManager<WAMVCPedidos.Models.UserModel> SignInManager
@inject UserManager<WAMVCPedidos.Models.UserModel> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WAMVCPedidos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WAMVCPedidos.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Views/Shared/_Layout.cshtml.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    <header class="modern-header">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand modern-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="brand-content">
                        <i class="fas fa-tasks brand-icon"></i>
                        <span class="brand-text">WAMVCPedidos</span>
                        <small class="brand-subtitle">Gestión de Artesanías</small>
                    </div>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav gap-3 ms-5 mt-2 mt-md-0">
                        <li class="nav-item">
                            <a class="nav-link modern-nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i><span>Inicio</span>
                            </a>
                        </li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            @* Ejemplos según rol *@
                            @if (User.IsInRole("admin") || User.IsInRole("empleado"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link modern-nav-link" asp-controller="Product" asp-action="Index">
                                        <i class="fas fa-box me-1"></i><span>Productos</span>
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole("admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link modern-nav-link" asp-controller="AdminUsers" asp-action="Index">
                                        <i class="fas fa-users-cog me-1"></i><span>Usuarios</span>
                                    </a>
                                </li>
                            }
                            <li class="nav-item">
                                <form class="d-inline" method="post" asp-area="Identity" asp-page="/Account/Logout">
                                    <button type="submit" class="btn btn-link nav-link p-0">
                                        <a class="nav-link modern-nav-link">
                                            <i class="fas fa-sign-out-alt me-1"></i><span>Salir</span>
                                        </a>
                                        
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link modern-nav-link" asp-area="Identity" asp-page="/Account/Login">
                                    <i class="fas fa-sign-in-alt me-1"></i><span>Ingresar</span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-fill">
        <div class="container-fluid py-4">
            @RenderBody()
        </div>
    </main>

    <footer class="modern-footer mt-auto">
        <div class="footer-content">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <div class="footer-brand">
                            <i class="fas fa-tasks me-2"></i>
                            <strong>WebAppMVC</strong>
                            <span class="ms-2 text-muted">- Sistema de Gestión de Artesanías</span>
                        </div>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <div class="footer-links">
                            <span class="text-muted">&copy; 2025 - Todos los derechos reservados</span>
                            <span class="mx-2 text-muted">|</span>
                            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="footer-link">
                                <i class="fas fa-shield-alt me-1"></i>Política de Privacidad
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
