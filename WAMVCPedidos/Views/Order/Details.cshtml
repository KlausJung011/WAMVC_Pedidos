@model WAMVCPedidos.Models.OrderModel
@{
    ViewData["Title"] = "Detalle del Pedido";
    var estados = new[] { "Pendiente", "Procesado", "Enviado", "Entregado" };
}

<div class="container-fluid">
    @if (TempData["Error"] is string err && !string.IsNullOrWhiteSpace(err))
    {
        <div class="alert alert-danger">@err</div>
    }

    <div class="card shadow border-0 mb-3">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-receipt me-2"></i>Pedido #@Model.Id
            </h5>
            <div>
                <form asp-action="SetEstado" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <select name="estado" class="form-select form-select-sm d-inline w-auto me-2">
                        @foreach (var e in estados)
                        {
                            <option value="@e" selected="@(Model.Estado == e)">@e</option>
                        }
                    </select>
                    <button class="btn btn-sm btn-outline-light" type="submit">Actualizar estado</button>
                </form>
            </div>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-2">Cliente</dt>
                <dd class="col-sm-4">@Model.User?.Nombre (@Model.IdUser)</dd>

                <dt class="col-sm-2">Fecha</dt>
                <dd class="col-sm-4">@Model.Fecha.ToShortDateString()</dd>

                <dt class="col-sm-2">Estado</dt>
                <dd class="col-sm-4"><span class="badge bg-secondary">@Model.Estado</span></dd>

                <dt class="col-sm-2">Total</dt>
                <dd class="col-sm-4"><strong>@Model.Total.ToString("C")</strong></dd>
            </dl>
        </div>
    </div>

    <div class="card shadow border-0">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>Items
            </h5>
            <div class="d-flex">
                <form asp-controller="OrderItem" asp-action="Create" method="post" class="row g-2 align-items-center">
                    <input type="hidden" name="IdOrder" value="@Model.Id" />
                    <div class="col-auto">
                        <select name="IdProduct" class="form-select" asp-items="ViewBag.Products"></select>
                    </div>
                    <div class="col-auto">
                        <input name="Cantidad" type="number" min="1" class="form-control" placeholder="Cantidad" />
                    </div>
                    <div class="col-auto">
                        <button class="btn btn-outline-light" type="submit">
                            <i class="fas fa-plus"></i> Agregar
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.OrderItems != null && Model.OrderItems.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Producto</th>
                                <th class="text-end">Precio</th>
                                <th class="text-center">Cantidad</th>
                                <th class="text-end">Subtotal</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var it in Model.OrderItems)
                            {
                                <tr>
                                    <td>@it.Product?.Nombre</td>
                                    <td class="text-end">@it.Product?.Precio.ToString("C")</td>
                                    <td class="text-center">
                                        <form asp-controller="OrderItem" asp-action="Edit" asp-route-id="@it.Id" method="post" class="d-inline">
                                            <input type="hidden" name="Id" value="@it.Id" />
                                            <input type="hidden" name="IdOrder" value="@Model.Id" />
                                            <input type="hidden" name="IdProduct" value="@it.IdProduct" />
                                            <input name="Cantidad" type="number" min="1" value="@it.Cantidad" class="form-control form-control-sm d-inline w-auto" />
                                            <button class="btn btn-sm btn-outline-secondary ms-1" type="submit">Guardar</button>
                                        </form>
                                    </td>
                                    <td class="text-end">@it.Subtotal.ToString("C")</td>
                                    <td class="text-center">
                                        <form asp-controller="OrderItem" asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('¿Eliminar item?');">
                                            <input type="hidden" name="id" value="@it.Id" />
                                            <button class="btn btn-sm btn-outline-danger" type="submit">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4 text-muted">No hay items en este pedido.</div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
        @if (User.IsInRole("admin"))
        {
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger ms-2">Eliminar pedido</a>
        }
    </div>
</div>