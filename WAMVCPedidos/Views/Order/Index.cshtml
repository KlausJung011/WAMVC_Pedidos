@model IEnumerable<WAMVCPedidos.Models.OrderModel>

@{
    ViewData["Title"] = "Órdenes";
}

<div class="container-fluid">
    <div class="alert alert-info d-flex align-items-center" role="alert">
        <i class="fas fa-info-circle me-2"></i>
        Para modificar los items de una orden, entra al <strong>Detalle</strong> de la orden.
    </div>

    <div class="card shadow-lg border-0">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h2 class="mb-0"><i class="fas fa-bag-shopping me-2"></i>Gestión de Órdenes</h2>
            <a asp-action="Create" class="btn btn-outline-light btn-lg">
                <i class="fas fa-plus me-1"></i>Nueva Orden
            </a>
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Fecha</th>
                                <th>Estado</th>
                                <th>Total</th>
                                <th>Cliente</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Fecha.ToShortDateString()</td>
                                    <td><span class="badge bg-secondary">@item.Estado</span></td>
                                    <td>@item.Total.ToString("C")</td>
                                    <td>@item.User?.Nombre</td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detalle">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="Editar cabecera">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No hay órdenes registradas</h4>
                    <p class="text-muted">Comienza creando tu primera orden</p>
                    <a asp-action="Create" class="btn btn-success btn-lg">
                        <i class="fas fa-plus me-1"></i>Crear Orden
                    </a>
                </div>
            }
        </div>
    </div>
</div>